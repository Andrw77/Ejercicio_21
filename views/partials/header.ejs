<div
  class="container-fluid p-0 bg-black d-flex flex-column align-items-center justify-content-center header_img"
>
  <h1 class="text-white">
    <% if (header === "home") { %> Hack the blog <% } else { %> <%= article.title %> <% } %>
  </h1>
  <small class="text-white opacity-50">
    <% if (header === "home") { %> El blog de hack academy <% } else { %> <% if (article.user) { %>
    <small class="text-white opacity-75">
      Created By <%= article.user.firstname %> <%= article.user.lastname %>
    </small>
    <% } %>
    <small class="text-white opacity-75"><%= article.createdAgo %></small>
    <% } %>
  </small>
</div>
